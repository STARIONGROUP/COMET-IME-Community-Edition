            <HierarchicalDataTemplate DataType="{x:Type viewModels:OrExpressionRowViewModel}" ItemsSource="{Binding ContainedRows}">
                <dx:MeasurePixelSnapper>
                    <StackPanel Orientation="Horizontal">
                        <dx:PixelSnapper>
                            <Image Width="16"
